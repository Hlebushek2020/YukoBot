<Window x:Class="YukoClient.ExecutionErrorsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:models="clr-namespace:YukoClient.Models"
        mc:Ignorable="d"
        Title="ExecutionErrorsWindow"
        Style="{StaticResource WindowStyle}"
        Height="450"
        Width="800"
        FontSize="14"
        WindowStartupLocation="CenterScreen" d:DataContext="{d:DesignInstance models:Script}">
    <Grid Margin="10">
        <ListBox ItemsSource="{Binding Path=Errors, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" />
        <!-- https://asp-blogs.azurewebsites.net/thomaslebrun/wpf-how-to-gray-the-icon-of-a-menuitem -->
    </Grid>
</Window>